@page
@model CCM.App.Frontend.Pages.UpdateModel
@{
}
<h2>Actualización de datos</h2>
<form method="post">
    <input type="hidden" asp-for="residente.id" />
    <div class="form-group">
        <label asp-for="residente.nombre"></label>
        <input asp-for="residente.nombre" class="form-control">
        <span class="text-danger" asp-validation-for="residente.nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="residente.apellido"></label>
        <input asp-for="residente.apellido" class="form-control">
        <span class="text-danger" asp-validation-for="residente.apellido"></span>
    </div>
    <div class="form-group">
        <label asp-for="residente.cedula"></label>
        <input asp-for="residente.cedula" class="form-control">
        <span class="text-danger" asp-validation-for="residente.cedula"></span>
    </div>
    <div class="form-group">
        <label asp-for="residente.apartamento"></label>
        <input asp-for="residente.apartamento" class="form-control">
        <span class="text-danger" asp-validation-for="residente.apartamento"></span>
    </div>
    <div><br>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-primary" asp-page="./Residentes">Volver</a>
    </div>
</form>